<Window x:Class="WpfApp1.Glavnaya"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Glavnaya" Height="600" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF85A45A"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ComboBox x:Name="istok" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Width="76" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}"/>
        <ComboBox x:Name="rash" HorizontalAlignment="Left" Margin="170,14,0,0" VerticalAlignment="Top" Width="76" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}"/>
        <ComboBox x:Name="vibr" HorizontalAlignment="Left" Margin="89,14,0,0" VerticalAlignment="Top" Width="76" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}"/>
        <Label Content="Источник выбросов" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Выбросы" HorizontalAlignment="Left" Margin="13,286,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addIstochnik" Content="Добавить источник" HorizontalAlignment="Left" Margin="635,142,0,0" VerticalAlignment="Top"/>
        <Button x:Name="delIstochnik" Content="Удалить источник" HorizontalAlignment="Left" Margin="639,187,0,0" VerticalAlignment="Top"/>
        <Button x:Name="redactIstochnik" Content="Редактировать источник" HorizontalAlignment="Left" Margin="621,229,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addvibros" Content="Добавить выбросы" HorizontalAlignment="Left" Margin="639,362,0,0" VerticalAlignment="Top"/>
        <Button x:Name="delvibros" Content="Удалить выбросы" HorizontalAlignment="Left" Margin="640,407,0,0" VerticalAlignment="Top"/>
        <Button x:Name="redactvibros" Content="Редактировать выбросы" HorizontalAlignment="Left" Margin="621,455,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="table_1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,89,212,316" SelectionChanged="table_1_SelectionChanged"/>
        <DataGrid x:Name="table_2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="13,317,209,88" SelectionChanged="table_1_SelectionChanged"/>
        <Button x:Name="minvibros" Content="Минимальные выбросы" HorizontalAlignment="Left" Margin="42,534,0,0" VerticalAlignment="Top"/>
        <Button x:Name="maxvibros" Content="Максимальные выбросы" HorizontalAlignment="Left" Margin="213,534,0,0" VerticalAlignment="Top"/>
        <Button x:Name="sredvibros" Content="Средние выбросы" HorizontalAlignment="Left" Margin="390,534,0,0" VerticalAlignment="Top"/>
        <Label Content="Источник" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Выборы" HorizontalAlignment="Left" Margin="91,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Расчет" HorizontalAlignment="Left" Margin="177,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
