<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:col="clr-namespace:System.Collections;assembly=mscorlib" x:Class="WpfApp1.Glavnaya"
        mc:Ignorable="d"
        Title="Glavnaya" Height="600" Width="800" Icon="/png-transparent-factory-pipe-silhouette-factory-refinery-industrial-production.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="183*"/>
            <ColumnDefinition Width="217*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF85A45A"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ComboBox x:Name="istok" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Width="76" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}">
            <Button Background="#FFCEF192" Content="Добавить" HorizontalAlignment="Center" RenderTransformOrigin="0.5,1" VerticalAlignment="Center"/>
            <Button Background="#FFCEF192" Content="Удалить" HorizontalAlignment="Center" RenderTransformOrigin="0.5,1" VerticalAlignment="Center"/>
            <Button Background="#FFCEF192" Content="Редактировать" HorizontalAlignment="Center" RenderTransformOrigin="0.5,1" VerticalAlignment="Center"/>
        </ComboBox>
        <ComboBox x:Name="rash" HorizontalAlignment="Left" Margin="170,14,0,0" VerticalAlignment="Top" Width="76" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}">
            <Button Background="#FFCEF192" Content="Минимальные выбросы" HorizontalAlignment="Center" RenderTransformOrigin="0.5,1" VerticalAlignment="Center"/>
            <Button Background="#FFCEF192" Content="Максимальные выбросы" HorizontalAlignment="Center" RenderTransformOrigin="0.5,1" VerticalAlignment="Center"/>
            <Button Background="#FFCEF192" Content="Средние выбросы" HorizontalAlignment="Center" RenderTransformOrigin="0.5,1" VerticalAlignment="Center"/>
        </ComboBox>
        <ComboBox x:Name="vibr" HorizontalAlignment="Left" Margin="89,14,0,0" VerticalAlignment="Top" Width="76" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}">
            <Button Background="#FFCEF192" Content="Добавить" HorizontalAlignment="Center" RenderTransformOrigin="0.5,1" VerticalAlignment="Center"/>
            <Button Background="#FFCEF192" Content="Удалить" HorizontalAlignment="Center" RenderTransformOrigin="0.5,1" VerticalAlignment="Center"/>
            <Button Background="#FFCEF192" Content="Редактировать" HorizontalAlignment="Center" RenderTransformOrigin="0.5,1" VerticalAlignment="Center"/>
        </ComboBox>
        <Label Content="Источник выбросов" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Выбросы" HorizontalAlignment="Left" Margin="13,286,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addIstochnik" Content="Добавить источник" HorizontalAlignment="Left" Margin="269,142,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="delIstochnik" Content="Удалить источник" HorizontalAlignment="Left" Margin="273,187,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="redactIstochnik" Content="Редактировать источник" HorizontalAlignment="Left" Margin="255,229,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="addvibros" Content="Добавить выбросы" HorizontalAlignment="Left" Margin="273,362,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="delvibros" Content="Удалить выбросы" HorizontalAlignment="Left" Margin="274,407,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="redactvibros" Content="Редактировать выбросы" HorizontalAlignment="Left" Margin="255,455,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <DataGrid x:Name="table_1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,89,212,316" SelectionChanged="table_1_SelectionChanged" Grid.ColumnSpan="2">
            <DataGrid.Resources>
                <col:ArrayList x:Key="Vibrosi">
                    <DataGridTextColumn Header="Номер выброса" Binding="{Binding Path=ID_Emission}" Width="90" />
                    <DataGridHyperlinkColumn Header="Номер источника выброса" Binding="{Binding Path=ID_Souce}" Width="80" />
                    <DataGridTextColumn Header="Количество" Binding="{Binding Path=Count}" Width="50" />
                    <DataGridTextColumn Header="Описание" Binding="{Binding Path=Text}" Width="500"  MinWidth="500"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Path=date}" Width="50" />
                </col:ArrayList>
            </DataGrid.Resources>
        </DataGrid>
        <DataGrid x:Name="table_2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="13,317,209,88" SelectionChanged="table_1_SelectionChanged" Grid.ColumnSpan="2">
            <DataGrid.Resources>
                <col:ArrayList x:Key="Vibrosi">
                    <DataGridHyperlinkColumn Header="Номер источника выброса" Binding="{Binding Path=ID_Souce}" Width="80" />
                    <DataGridTextColumn Header="Источник" Binding="{Binding Path=Name}" Width="50" />
                    <DataGridTextColumn Header="Расположение" Binding="{Binding Path=Adress}" Width="500"  MinWidth="500"/>
                </col:ArrayList>
            </DataGrid.Resources>
        </DataGrid>
        <Button x:Name="minvibros" Content="Минимальные выбросы" HorizontalAlignment="Left" Margin="42,534,0,0" VerticalAlignment="Top"/>
        <Button x:Name="maxvibros" Content="Максимальные выбросы" HorizontalAlignment="Left" Margin="213,534,0,0" VerticalAlignment="Top"/>
        <Button x:Name="sredvibros" Content="Средние выбросы" HorizontalAlignment="Left" Margin="24,534,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Источник" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Выборы" HorizontalAlignment="Left" Margin="91,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Расчет" HorizontalAlignment="Left" Margin="177,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
